<div class="row marketing">
  <div class="col-lg-12">
    <h4><%= t(".page_title") %></h4>

    <%= form_tag venues_path, method: :get do %>
      <div class="form-group">
        <label for="q"><%= t(".query_label") %></label>
        <%= text_field_tag :q, '', placeholder: t(".query_placeholder"), class: "form-control", type: :search %>
      </div>
      <%= submit_tag t(".search"), class: "btn btn-default" %>
    <% end %>
  </div>
</div>